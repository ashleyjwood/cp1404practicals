BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_number
            text: "34"  # Default value
            font_size: 48
            multiline: False
            size_hint_x: 0.75
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                id: mile_up
                text: "Up"
                font_size: 30
                on_release: app.handle_increment("mile_up")
            Button:
                id: mile_down
                text: "Down"
                font_size: 30
                on_release: app.handle_increment("mile_down")

    Button:
        id: convert_button
        text: "Convert miles to km"
        on_release: app.convert_distance()

    Label:
        text: "54.71756"  # Default converted value
        color: (1,1,0,1)
        id: output_label
        font_size: 48
